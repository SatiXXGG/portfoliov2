---
import { ViewTransitions } from "astro:transitions";
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <meta charset="UTF-8" />
  <meta
    name="description"
    content="Hello! This is my portfolio. Commissions are open right now! ✔, you can check the web for some prices and work examples 😍"
  />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>

  <body>
    <ViewTransitions />
    <slot />
  </body>
</html>
