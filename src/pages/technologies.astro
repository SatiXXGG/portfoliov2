---
import NavBar from "../components/nav-bar.astro";
import TechTemplate from "../components/techTemplate.astro";
import Layout from "../layouts/Layout.astro";
import Btpp from "../assets/btpp.png";
import Rowind from "../assets/rowind2.png";
---

<Layout title="Technologies">
  <NavBar />
  <div
    class="justify-center grid grid-cols-1 md:grid-cols-3 grid-rows-none w-full h-auto flex-col relative mt-48 md:mt-32 md:px-44"
  >
    <TechTemplate
      main="BTPP"
      description="Better than Proximity Prompt is an advanced and fully customizable interaction system"
      source={Btpp}
    />

    <TechTemplate
      main="RoWind"
      description="Roblox components system to animate faster"
      source={Rowind}
    />
  </div>

  <footer
    class="bg-rose-800 rounded-2xl w-[80vw] md:w-[33vw] mx-auto h-44 md:rounded-tl-none md:rounded-br-none md:rounded-tr-2xl md:rounded-bl-2xl relative text-white flex flex-col py-5 mt-5 md:mt-20 mb-12 shadow-md shadow-zinc-900"
  >
    <h1 class="font-bold text-3xl px-6">Warning</h1>

    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="icon icon-tabler icon-tabler-alert-triangle-filled absolute left-40 top-7"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      stroke-width="2"
      stroke="currentColor"
      fill="none"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
      <path
        d="M12 1.67c.955 0 1.845 .467 2.39 1.247l.105 .16l8.114 13.548a2.914 2.914 0 0 1 -2.307 4.363l-.195 .008h-16.225a2.914 2.914 0 0 1 -2.582 -4.2l.099 -.185l8.11 -13.538a2.914 2.914 0 0 1 2.491 -1.403zm.01 13.33l-.127 .007a1 1 0 0 0 0 1.986l.117 .007l.127 -.007a1 1 0 0 0 0 -1.986l-.117 -.007zm-.01 -7a1 1 0 0 0 -.993 .883l-.007 .117v4l.007 .117a1 1 0 0 0 1.986 0l.007 -.117v-4l-.007 -.117a1 1 0 0 0 -.993 -.883z"
        stroke-width="0"
        fill="currentColor"></path>
    </svg>

    <h3 class="px-7 md:py-2">
      Some of these projects are not done yet or even not started
    </h3>
  </footer>
</Layout>

<style is:global>
  body {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;

    background-color: rgb(33, 33, 33);
  }
</style>
