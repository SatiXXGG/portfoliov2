<img
  alt="userImage"
  id="userImg"
  src="https://thumbs.dreamstime.com/b/default-avatar-profile-image-vector-social-media-user-icon-potrait-182347582.jpg"
  class="user-image absolute w-12 h-12 top-3 left-5 md:right-10 md:top-10 rounded-full"
/>

<button
  class="absolute top-10 left-20 bg-red-600 text-white p-2 rounded-2xl w-32 h-10 text-xs transition-all duration-200 hover:bg-black hover:scale-105 hidden"
  id="logOut">Log out</button
>

<script>
  import { initializeApp } from "firebase/app";
  import { getAuth } from "firebase/auth";
  const firebaseConfig = {
    apiKey: "AIzaSyA8QmYfTC6v5T1UZpqxarSExNWXZ9ahKDA",
    authDomain: "portfolio-7a5f5.firebaseapp.com",
    projectId: "portfolio-7a5f5",
    storageBucket: "portfolio-7a5f5.appspot.com",
    messagingSenderId: "198869603584",
    appId: "1:198869603584:web:85d2b2c5091f28737e4fe5",
    measurementId: "G-PQWQB1D72S",
  };

  // Initialize Firebase
  const app = initializeApp(firebaseConfig);
  const auth = getAuth(app);

  const element = document.getElementById("logOut");
  const image = document.getElementById("userImg");
  element.addEventListener("click", (e) => {
    //logs out the user..
    auth.signOut().then(() => {
      console.log("signed out");
      image.src =
        "https://thumbs.dreamstime.com/b/default-avatar-profile-image-vector-social-media-user-icon-potrait-182347582.jpg";
      element.visibility = "hidden";
    });
  });
</script>
