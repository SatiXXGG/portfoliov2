---
interface Props {
  link: string;
}
const { link } = Astro.props;
---

<a
  href={link}
  class="p-1 md:p-5 text-white flex-row justify-center cursor-pointer active:bg-white hover:bg-black focus:outline-none focus:bg-gray-900 font-extralight rounded-lg ml-5 text-center inline-flex items-center mr-5 mb-2 hover:shadow-lg transition-all duration-200 ease-in-out hover:scale-110 scale-90 gap-x-2 opacity-70 hover:opacity-100"
>
  <slot name="before" />
  <slot />
  <slot name="after" />
</a>
