---
interface Props {
  video: any;
}
const { video } = Astro.props;
---

<div
  class="mt-3 rounded-3xl md:rounded-2xl h-[60%] w-[95%] md:w-[97%] md:h-[78%] relative"
  id="videoPlayer"
>
  <div
    id="loader"
    class="w-36 h-36 rounded-full absolute border-2 animate-spin z-50 border-t-transparent border-purple-800 md:left-[35%] md:top-[30%]"
  >
  </div>

  <video id="coreVid" src={video} class="rounded-2xl w-[100%] h-[100%]"></video>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="absolute bottom-1 left-4 md:bottom-0 md:top-60 bg-gray-700 md:left-5 icon icon-tabler icon-tabler-player-play-filled cursor-pointer md:bg-black rounded-full p-3 duration-700 transition-all hover:bg-green-500 text-white ease-in-out hover:scale-110"
    width="50"
    height="50"
    viewBox="0 0 24 24"
    stroke-width="2"
    stroke="currentColor"
    fill="none"
    stroke-linecap="round"
    stroke-linejoin="round"
    id="buttonPlay"
  >
    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
    <path
      d="M6 4v16a1 1 0 0 0 1.524 .852l13 -8a1 1 0 0 0 0 -1.704l-13 -8a1 1 0 0 0 -1.524 .852z"
      stroke-width="0"
      fill="currentColor"></path>
  </svg>

  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="absolute md:top-60 md:left-5 icon bg-gray-700 icon-tabler icon-tabler-player-play-filled cursor-pointer md:bg-black rounded-full p-3 duration-700 transition-all hover:bg-green-500 text-white ease-in-out hover:scale-110"
    width="50"
    height="50"
    viewBox="0 0 24 24"
    stroke-width="2"
    stroke="currentColor"
    fill="none"
    stroke-linecap="round"
    stroke-linejoin="round"
    id="buttonPause"
  >
    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
    <path
      d="M6 5m0 1a1 1 0 0 1 1 -1h2a1 1 0 0 1 1 1v12a1 1 0 0 1 -1 1h-2a1 1 0 0 1 -1 -1z"
    ></path>
    <path
      d="M14 5m0 1a1 1 0 0 1 1 -1h2a1 1 0 0 1 1 1v12a1 1 0 0 1 -1 1h-2a1 1 0 0 1 -1 -1z"
    ></path>
  </svg>
</div>
